<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/post_match"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cpr_bkgnd"
    tools:context=".PostMatch">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/heading"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textColor="@color/cpr_green"
            android:textStyle="bold"
            android:textSize="42sp"
            android:gravity="center"
            android:text="@string/post_heading" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/didLeave"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableEnd="?android:attr/listChoiceIndicatorMultiple"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:gravity="end|center"
                android:paddingStart="0dp"
                android:paddingEnd="10dp"
                android:text="@string/post_left_start_zone" />

            <TextView
                android:id="@+id/paddingLeaveStart"
                android:layout_width="570dp"
                android:layout_height="60dp"
                android:gravity="end|center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textClimbPosition"
                android:layout_width="400dp"
                android:layout_height="60dp"
                android:gravity="end|center"
                android:paddingEnd="50dp"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:text="@string/post_climb_position"
                tools:ignore="RtlSymmetry" />

            <EditText
                android:id="@+id/dropClimbingPosition"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textColor="@color/cpr_bkgnd"
                android:background="@color/white"
                android:inputType="text"
                android:text="Singleselect Dropdown" />

            <TextView
                android:id="@+id/paddingClimbPosition"
                android:layout_width="400dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textTrap"
                android:layout_width="400dp"
                android:layout_height="60dp"
                android:gravity="end|center"
                android:paddingEnd="50dp"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:text="@string/post_trap"
                tools:ignore="RtlSymmetry" />

            <EditText
                android:id="@+id/dropTrap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/cpr_bkgnd"
                android:background="@color/white"
                android:textSize="24sp"
                android:inputType="text"
                android:text="Singleselect Dropdown" />

            <TextView
                android:id="@+id/paddingTrap"
                android:layout_width="400dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textDNP"
                android:layout_width="400dp"
                android:layout_height="60dp"
                android:gravity="end|center"
                android:paddingEnd="50dp"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:text="@string/post_dnp"
                tools:ignore="RtlSymmetry" />

            <EditText
                android:id="@+id/dropDNP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="text"
                android:textColor="@color/cpr_bkgnd"
                android:background="@color/white"
                android:textSize="24sp"
                android:text="Multiselect Dropdown" />

            <TextView
                android:id="@+id/paddingDNP"
                android:layout_width="400dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textComments"
                android:layout_width="400dp"
                android:layout_height="60dp"
                android:gravity="end|center"
                android:paddingEnd="50dp"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:visibility="visible"
                android:text="@string/post_comments"
                tools:ignore="RtlSymmetry" />

            <EditText
                android:id="@+id/dropComments"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="text"
                android:textColor="@color/cpr_bkgnd"
                android:background="@color/white"
                android:textSize="24sp"
                android:text="Multiselect Dropdown" />

            <TextView
                android:id="@+id/paddingComments"
                android:layout_width="400dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/but_Next"
        android:layout_width="175dp"
        android:layout_height="60dp"
        android:text="Next"
        android:textSize="28sp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/cpr_bkgnd"
        app:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="HardcodedText,MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>