<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/post_match"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cpr_bkgnd"
    tools:context=".PostMatch">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/heading"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textColor="@color/cpr_green"
            android:textStyle="bold"
            android:textSize="42sp"
            android:gravity="center"
            android:text="Post-Match Scouting Information" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/paddingLeaveStart"
                android:layout_width="447dp"
                android:layout_height="60dp"
                android:gravity="right|center"
                android:paddingRight="50dp"
                android:textColor="@color/white"
                android:textSize="24sp"/>

            <CheckBox
                android:id="@+id/didLeave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:paddingLeft="10dp"
                android:textSize="24sp"
                android:text="Did they leave the starting zone?" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textClimbPosition"
                android:layout_width="447dp"
                android:layout_height="60dp"
                android:gravity="right|center"
                android:paddingRight="50dp"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:text="Climbing Position:" />

            <EditText
                android:id="@+id/dropClimbingPosition"
                android:layout_width="253dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:inputType="text"
                android:text="Singleselect Dropdown" />

            <TextView
                android:id="@+id/paddingClimbPosition"
                android:layout_width="650dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textTrap"
                android:layout_width="447dp"
                android:layout_height="60dp"
                android:gravity="right|center"
                android:paddingRight="50dp"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:text="Trap Outcome:" />

            <EditText
                android:id="@+id/dropTrap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:inputType="text"
                android:text="Singleselect Dropdown" />

            <TextView
                android:id="@+id/paddingTrap"
                android:textSize="24sp"
                android:layout_width="650dp"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textDNP"
                android:layout_width="447dp"
                android:layout_height="60dp"
                android:gravity="right|center"
                android:paddingRight="50dp"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:text="DNP Reasons:" />

            <EditText
                android:id="@+id/dropDNP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="text"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:text="Multiselect Dropdown" />

            <TextView
                android:id="@+id/paddingDNP"
                android:layout_width="650dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textComments"
                android:layout_width="447dp"
                android:layout_height="60dp"
                android:gravity="right|center"
                android:paddingRight="50dp"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:visibility="visible"
                android:text="Comments:"/>

            <EditText
                android:id="@+id/dropComments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="text"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:text="Multiselect Dropdown" />

            <TextView
                android:id="@+id/paddingComments"
                android:layout_width="650dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/but_Next"
        android:layout_width="175dp"
        android:layout_height="60dp"
        android:text="Next"
        android:textSize="28sp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/cpr_bkgnd"
        app:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="HardcodedText,MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>