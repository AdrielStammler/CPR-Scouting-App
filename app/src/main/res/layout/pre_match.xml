<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pre_match"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cpr_bkgnd"
    tools:context=".PreMatch">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="337dp">

        <TextView
            android:id="@+id/heading"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="Pre-Match Scouting Information"
            android:textColor="@color/cpr_green"
            android:textSize="42sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textMatch"
                android:layout_width="447dp"
                android:layout_height="60dp"
                android:gravity="right|center"
                android:paddingRight="50dp"
                android:text="Match Number:"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editMatch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="text"
                android:textColor='@color/white'
                android:text="Name"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/matchPadding"
                android:layout_width="650dp"
                android:layout_height="65dp"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textTeamToScout"
                android:layout_width="447dp"
                android:layout_height="60dp"
                android:gravity="right|center"
                android:paddingRight="50dp"
                android:text="Team Number To Scout:"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editTeamToScout"
                android:layout_width="253dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="text"
                android:textColor='@color/white'
                android:text="Name"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textTeamToScoutName"
                android:textColor='@color/white'
                android:layout_width="650dp"
                android:layout_height="65dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textScouterName"
                android:layout_width="447dp"
                android:layout_height="60dp"
                android:gravity="right|center"
                android:paddingRight="50dp"
                android:text="Scouter Name:"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editScouterName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="text"
                android:text="Name" />

            <TextView
                android:id="@+id/paddingScouterName"
                android:layout_width="650dp"
                android:layout_height="60dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/paddingDidPlay"
                android:layout_width="447dp"
                android:layout_height="60dp"
                android:gravity="right|center"
                android:paddingRight="50dp"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <CheckBox
                android:id="@+id/didPlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="Did They Play?"
                android:textColor="@color/white"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textStartingPosition"
                android:layout_width="447dp"
                android:layout_height="60dp"
                android:gravity="right|center"
                android:paddingRight="50dp"
                android:text="Starting Position:"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:visibility="visible" />

            <CheckBox
                android:id="@+id/startingPosition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="Single select Drop down"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

    <CheckBox
        android:id="@+id/checkOverride"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_green"
        android:paddingLeft="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:textSize="16sp"
        android:text="Override Team Number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textOverride"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="right|center"
        android:textSize="24sp"
        android:text="Enter Team Number:"
        android:textColor="@color/white"
        android:layout_marginStart="50dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/checkOverride"
        app:layout_constraintLeft_toRightOf="@id/checkOverride" />

    <EditText
        android:id="@+id/editOverrideTeamNum"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:autofillHints="Enter team number"
        android:textColor="@color/black"
        android:background="@color/white"
        android:layout_marginStart="20dp"
        android:inputType="number"
        android:textSize="24sp"
        android:gravity="center"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/textOverride"
        app:layout_constraintLeft_toRightOf="@id/textOverride" />

    <Button
        android:id="@+id/butAddOverrideTeamNum"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Add"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:visibility="invisible"
        android:gravity="center"
        android:layout_marginStart="50dp"
        app:layout_constraintTop_toTopOf="@id/editOverrideTeamNum"
        app:layout_constraintLeft_toRightOf="@id/editOverrideTeamNum" />

    <Button
        android:id="@+id/but_Next"
        android:layout_width="175dp"
        android:layout_height="60dp"
        android:text="Next"
        android:textSize="28sp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/cpr_bkgnd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="HardcodedText,MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>