<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cpr_bkgnd"
    tools:context=".Settings">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:textColor="@color/cpr_green"
        android:textStyle="bold"
        android:textSize="42sp"
        android:gravity="center"
        android:text="@string/settings_heading" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_Competition"
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:gravity="end|center"
            android:paddingEnd="50dp"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:text="@string/settings_competition"
            tools:ignore="RtlSymmetry" />

        <Spinner
            android:id="@+id/spinner_CompetitionId"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableEnd="@drawable/drop_down_arrow"
            android:gravity="end|center"
            android:paddingEnd="50dp"
            android:textSize="24sp"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/text_CompetitionName"
            android:layout_width="500dp"
            android:layout_height="50dp"
            android:gravity="start|center"
            android:textColor="@color/light_grey"
            android:paddingHorizontal="20dp"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_Device"
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:gravity="end|center"
            android:paddingEnd="50dp"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:text="@string/settings_device"
            tools:ignore="RtlSymmetry" />

        <Spinner
            android:id="@+id/spinner_DeviceId"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableEnd="@drawable/drop_down_arrow"
            android:gravity="end|center"
            android:paddingEnd="50dp"
            android:textSize="24sp"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/text_DeviceName"
            android:layout_width="500dp"
            android:layout_height="50dp"
            android:gravity="start|center"
            android:textColor="@color/light_grey"
            android:paddingHorizontal="20dp"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_ScoutingTeam"
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:gravity="end|center"
            android:paddingEnd="50dp"
            android:text="@string/settings_scouting_team"
            android:textColor="@color/white"
            android:textSize="24sp"
            tools:ignore="RtlSymmetry" />

        <EditText
            android:id="@+id/edit_ScoutingTeam"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:autofillHints="Enter Scouting team number here"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@color/cpr_bkgnd"
            android:background="@color/white"
            android:textColorHint="@color/black"
            android:textSize="24sp"
            android:paddingHorizontal="20dp"
            tools:ignore="LabelFor" />

        <TextView
            android:id="@+id/text_ScoutingTeamName"
            android:layout_width="500dp"
            android:layout_height="50dp"
            android:gravity="start|center"
            android:textColor="@color/light_grey"
            android:paddingStart="20dp"
            android:paddingHorizontal="20dp"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>

<Button
    android:id="@+id/but_Cancel"
    android:layout_width="175dp"
    android:layout_height="60dp"
    android:textSize="28sp"
    android:layout_marginBottom="20dp"
    android:layout_marginStart="20dp"
    android:textColor="@color/cpr_bkgnd"
    app:backgroundTint="@color/white"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    tools:ignore="HardcodedText,MissingConstraints"
    android:text="Cancel" />

<Button
    android:id="@+id/but_Save"
    android:layout_width="175dp"
    android:layout_height="60dp"
    android:textSize="28sp"
    android:layout_marginBottom="20dp"
    android:layout_marginEnd="20dp"
    android:textColor="@color/cpr_bkgnd"
    app:backgroundTint="@color/white"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    tools:ignore="HardcodedText,MissingConstraints"
    android:text="Save" />

</androidx.constraintlayout.widget.ConstraintLayout>